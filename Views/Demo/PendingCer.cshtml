@model List<Identitynext2.Models.ViewModel.CertificateViewModel>
@{
    ViewData["Title"] = "PendingCer";
}

<h1>PendingCer</h1>

@if (Model.Count == 0)
{
    <div> No pending certificates. </div>
}
else {

    <table class="table table-bordered">

        <tr>
            <th>  Certificate Name  </th>
            <th> Operations </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td> @item.CertificateName</td>
                <td>
                    <form method="post" asp-action="ApproveCer" asp-route-id="@item.Id"> <input type="submit" class="btn btn-success" value="Approve"/></form>
                    <form method="post" asp-action="RejectCer" asp-route-id="@item.Id"> <input type="submit" class="btn btn-danger" value="Reject" /></form>

                    </td>
            </tr>
         
        }


    </table>
}